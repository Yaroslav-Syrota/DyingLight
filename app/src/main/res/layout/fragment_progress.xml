<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="5dp"
              android:orientation="vertical">

    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimary">

        <ua.com.thinkmobiles.dyinglight.viewes.CustomViewProgress
            android:id="@+id/tempProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:progressStroke="5"
            custom:progressColor="#CDDC39"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"/>

        <ua.com.thinkmobiles.dyinglight.viewes.CustomProgress
            android:id="@+id/surfaceProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tempProgress"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>
</LinearLayout>